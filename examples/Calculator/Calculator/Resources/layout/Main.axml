<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="0.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculatorAccumulator"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textSize="48dp" />
    <Space
        android:layout_height="16dp"
        android:layout_width="wrap_content" />
    <LinearLayout
        android:tag="@string/calculator_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonClear"
            android:text="Clear"
            android:layout_weight="0.666"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonDelete"
            android:text="Del"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonDivide"
            android:text="/"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:tag="@string/calculator_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton7"
            android:text="7"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton8"
            android:text="8"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton7"
            android:text="9"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonMultiply"
            android:text="X"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:tag="@string/calculator_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton4"
            android:text="4"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton5"
            android:text="5"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton6"
            android:text="6"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonMinus"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:tag="@string/calculator_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton1"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton2"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton7"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonPlus"
            android:text="+"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:tag="@string/calculator_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonInvert"
            android:text="+-"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_number"
            android:id="@+id/calcButton0"
            android:text="0"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonDecimal"
            android:text="."
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:tag="@string/calculator_operation"
            android:id="@+id/calcButtonEqual"
            android:text="="
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>